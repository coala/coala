# So all sections are disabled by default
Default.enabled = false
PythonCheck.enabled = true

[Default]
files = *.py, bears/**/*.py, coalib/**/*.py, ./coala

[PythonCheck]
bears = SpaceConsistencyBear, LineLengthBear
use_spaces = True
max_line_length = 120

[LineCounting]
bears = LineCountBear

[TODOS]
bears = KeywordBear
ci_keywords = \#TODO, \# TODO, \#FIXME, \# FIXME
cs_keywords =

[TRAVIS]
output = none
bears = SpaceConsistencyBear, LineLengthBear
use_spaces = True
max_line_length = 120
